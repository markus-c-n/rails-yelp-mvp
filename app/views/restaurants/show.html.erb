
<div class="container">


<div class="card p-3 mt-5">
  <div class="card-body">
    <h2 class="text-danger">👨‍🍳  <%= @restaurant.name %></h2><hr>
    <ul style="list-style: none;">
    <li class="mb-2">Address: <%= @restaurant.address %></li>
    <li class="mb-2"><em><%= @restaurant.category %></em></li><hr>
    <li class="mb-2">📞: <%= @restaurant.phone_number %></li>
    </ul>
  </div>
</div>


<p class="mt-3"><strong>Reviews</strong></p>
<div class="card">
<div class="card-body">
<ul class="list-group ps-3">
<% @restaurant.reviews.each do |review| %>
<li>Rating: <%= review.rating %>/5</li>
<li><%= review.content %></li>
<% end %>
</ul>
</div>
</div>



<div class="d-inline-block">
<%= link_to "🏠", restaurants_path, class: "btn btn-danger btn-lg mt-3" %>
</div>
<%= link_to "Review", new_restaurant_review_path(@restaurant), class: "btn btn-danger btn-lg mt-3" %>
</div>
