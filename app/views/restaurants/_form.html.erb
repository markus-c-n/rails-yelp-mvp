  <%= simple_form_for(@restaurant) do |f| %>
  <div class="form-inputs">
    <%= f.label :name %>
    <%= f.text_field :name, class:'form-control m-3' %>
    <%= f.label :address %>
    <%= f.text_field :address, class:'form-control m-3' %>
    <%= f.input :category, collection: Restaurant::CATEGORIES %>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class:'form-control m-3' %>
  </div>
  <div class="form-actions d-inline-block">
    <%= f.submit :add, class:'btn btn-danger' %>
    <%= link_to "🏠", restaurants_path, class: "btn btn-danger"  %>
 </div>
  <% end %>
